<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/calc_white">

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:padding="10dp"
        android:layout_marginBottom="20dp"
        android:background="@color/calc_light_gray"
        android:textSize="48sp"
        android:gravity="end|bottom"
        android:textColor="@color/calc_white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/reset_btn"
                android:onClick="onClear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:backgroundTint="@color/calc_medium_gray"
                android:text="@string/ac"
                android:textAlignment="center"
                android:textColor="@color/calc_white"
                android:textSize="30sp" />

            <Button
                android:id="@+id/positive_negative_btn"
                android:onClick="onDigit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:backgroundTint="@color/calc_medium_gray"
                android:text="@string/positive_negative"
                android:textAlignment="center"
                android:textColor="@color/calc_white"
                android:textSize="30sp" />

            <Button
                android:id="@+id/percentage_btn"
                android:onClick="onDigit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:backgroundTint="@color/calc_medium_gray"
                android:text="@string/percent"
                android:textAlignment="center"
                android:textColor="@color/calc_white"
                android:textSize="30sp" />

            <Button
                android:id="@+id/divide_btn"
                android:onClick="onOperator"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:backgroundTint="@color/calc_gold"
                android:text="@string/divide"
                android:textAlignment="center"
                android:textColor="@color/calc_white"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/seven_btn"
                android:onClick="onDigit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:backgroundTint="@color/calc_light_gray"
                android:text="@string/_7"
                android:textAlignment="center"
                android:textColor="@color/calc_white"
                android:textSize="30sp" />

            <Button
                android:id="@+id/eight_btn"
                android:onClick="onDigit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:backgroundTint="@color/calc_light_gray"
                android:text="@string/_8"
                android:textAlignment="center"
                android:textColor="@color/calc_white"
                android:textSize="30sp" />

            <Button
                android:id="@+id/nine_btn"
                android:onClick="onDigit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:backgroundTint="@color/calc_light_gray"
                android:text="@string/_9"
                android:textColor="@color/calc_white"
                android:textSize="30sp" />

            <Button
                android:id="@+id/multiply_btn"
                android:onClick="onOperator"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:backgroundTint="@color/calc_gold"
                android:text="@string/multiply"
                android:textAlignment="center"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/four_btn"
                android:onClick="onDigit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:backgroundTint="@color/calc_light_gray"
                android:text="@string/_4"
                android:textAlignment="center"
                android:textSize="30sp" />

            <Button
                android:id="@+id/five_btn"
                android:onClick="onDigit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:backgroundTint="@color/calc_light_gray"
                android:text="@string/_5"
                android:textAlignment="center"
                android:textSize="30sp" />

            <Button
                android:id="@+id/six_btn"
                android:onClick="onDigit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:backgroundTint="@color/calc_light_gray"
                android:text="@string/_6"
                android:textAlignment="center"
                android:textSize="30sp" />

            <Button
                android:id="@+id/minus_btn"
                android:onClick="onOperator"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:backgroundTint="@color/calc_gold"
                android:text="@string/minus"
                android:textAlignment="center"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/one_btn"
                android:onClick="onDigit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:backgroundTint="@color/calc_light_gray"
                android:text="@string/_1"
                android:textAlignment="center"
                android:textSize="30sp" />

            <Button
                android:id="@+id/two_btn"
                android:onClick="onDigit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:backgroundTint="@color/calc_light_gray"
                android:text="@string/_2"
                android:textAlignment="center"
                android:textSize="30sp" />

            <Button
                android:id="@+id/three_btn"
                android:onClick="onDigit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:backgroundTint="@color/calc_light_gray"
                android:text="@string/_3"
                android:textAlignment="center"
                android:textSize="30sp" />

            <Button
                android:id="@+id/plus_btn"
                android:onClick="onOperator"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:backgroundTint="@color/calc_gold"
                android:text="@string/plus"
                android:textAlignment="center"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/zero_btn"
                android:onClick="onDigit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="5dp"
                android:backgroundTint="@color/calc_light_gray"
                android:text="@string/_0"
                android:textAlignment="center"
                android:textSize="30sp" />

            <Button
                android:id="@+id/coma_btn"
                android:onClick="onDecimalPoint"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:backgroundTint="@color/calc_light_gray"
                android:text="@string/dot"
                android:textAlignment="center"
                android:textSize="30sp" />

            <Button
                android:id="@+id/equal_btn"
                android:onClick="onDigit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:backgroundTint="@color/calc_gold"
                android:text="@string/equal"
                android:textAlignment="center"
                android:textSize="30sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>